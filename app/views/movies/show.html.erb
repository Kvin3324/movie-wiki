<style media="screen">
  img {
    max-width: 200px;
    max-height: 200px;
  }
</style>


<p id="notice"><%= notice %></p>

<h1><%= @movie.title %></h1>

<div class="about">
  <strong>Synopsis:</strong>
  <p><%= @movie.description %></p>

</div>
    <% if @movie.image_url %>
    <%= image_tag @movie.image_url, align: 'right', style: 'padding-left: 30px;' %>
    <% end %>
</p>

<p>
  <strong>Teaser:</strong>
  <%= @movie.teaser %>
</p>

  <%= @movie.rating %>

<div class="links-sign-in mb-5">
  <% if user_signed_in? %>
  <%= link_to 'Edit', edit_movie_path(@movie) %> |
  <% end %>
  <%= link_to 'Back', movies_path %>
</div>
